@model TeamRankings.ViewModel.MatchViewModel

<div id="match-update-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>Update Match</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "update-match-form" }))
                {
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="MatchDateTime" class="control-label"></label>
                        <input asp-for="MatchDateTime" class="form-control" />
                        <span asp-validation-for="MatchDateTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeamA" class="control-label"></label>
                        <select id="teamA-selector" asp-for="TeamA" class="form-control">
                            <option>@Model.TeamA</option>
                        </select>
                        <span asp-validation-for="TeamA" class="text-danger">
                        </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeamAScore" class="control-label"></label>
                        <input asp-for="TeamAScore" class="form-control" />
                        <span asp-validation-for="TeamAScore" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeamB" class="control-label"></label>
                        <select id="teamB-selector" asp-for="TeamB" class="form-control">
                            <option>@Model.TeamB</option>
                        </select>
                        <span asp-validation-for="TeamB" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeamBScore" class="control-label"></label>
                        <input asp-for="TeamBScore" class="form-control" />
                        <span asp-validation-for="TeamBScore" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input id="match-update-submit" type="submit" value="Update" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>