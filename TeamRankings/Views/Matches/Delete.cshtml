@model TeamRankings.ViewModel.MatchViewModel

<div id="match-delete-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Team</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.MatchDateTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TeamA)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TeamB)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TeamAScore)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TeamAScore)
                        </dt>
                    </dl>

                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "delete-match-form" }))
                    {
                        <div class="form-group">
                            <input id="match-Id" type="hidden" asp-for="Id" />
                            <input id="match-delete-submit" type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
